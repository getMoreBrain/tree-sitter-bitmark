{
  "$schema": "https://tree-sitter.github.io/tree-sitter/assets/schemas/grammar.schema.json",
  "name": "bitmark",
  "rules": {
    "document": {
      "type": "REPEAT",
      "content": {
        "type": "SYMBOL",
        "name": "_block"
      }
    },
    "_block": {
      "type": "SYMBOL",
      "name": "bit_block"
    },
    "bit_block": {
      "type": "SEQ",
      "members": [
        {
          "type": "SYMBOL",
          "name": "bit_header"
        },
        {
          "type": "REPEAT",
          "content": {
            "type": "CHOICE",
            "members": [
              {
                "type": "SYMBOL",
                "name": "_inline"
              },
              {
                "type": "SYMBOL",
                "name": "block_tag"
              }
            ]
          }
        }
      ]
    },
    "bit_header": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "[."
        },
        {
          "type": "FIELD",
          "name": "bit_type",
          "content": {
            "type": "SYMBOL",
            "name": "bit_type"
          }
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SEQ",
              "members": [
                {
                  "type": "STRING",
                  "value": ":"
                },
                {
                  "type": "FIELD",
                  "name": "text_format",
                  "content": {
                    "type": "SYMBOL",
                    "name": "text_format"
                  }
                }
              ]
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "CHOICE",
          "members": [
            {
              "type": "SEQ",
              "members": [
                {
                  "type": "STRING",
                  "value": "&"
                },
                {
                  "type": "FIELD",
                  "name": "resource",
                  "content": {
                    "type": "SYMBOL",
                    "name": "resource_type"
                  }
                }
              ]
            },
            {
              "type": "BLANK"
            }
          ]
        },
        {
          "type": "STRING",
          "value": "]"
        }
      ]
    },
    "bit_type": {
      "type": "CHOICE",
      "members": [
        {
          "type": "STRING",
          "value": "article"
        },
        {
          "type": "STRING",
          "value": "summary"
        },
        {
          "type": "STRING",
          "value": "extractor-ai-chat"
        },
        {
          "type": "STRING",
          "value": "note"
        },
        {
          "type": "PATTERN",
          "value": "[a-zA-Z][a-zA-Z0-9_-]*"
        }
      ]
    },
    "text_format": {
      "type": "CHOICE",
      "members": [
        {
          "type": "STRING",
          "value": "bitmark--"
        },
        {
          "type": "STRING",
          "value": "bitmark++"
        }
      ]
    },
    "resource_type": {
      "type": "CHOICE",
      "members": [
        {
          "type": "STRING",
          "value": "image"
        },
        {
          "type": "STRING",
          "value": "video"
        }
      ]
    },
    "block_tag": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "instruction_block_tag"
        },
        {
          "type": "SYMBOL",
          "name": "hint_block_tag"
        }
      ]
    },
    "_inline": {
      "type": "CHOICE",
      "members": [
        {
          "type": "SYMBOL",
          "name": "italic"
        },
        {
          "type": "SYMBOL",
          "name": "formula_inline"
        },
        {
          "type": "SYMBOL",
          "name": "superscript"
        },
        {
          "type": "SYMBOL",
          "name": "subscript"
        },
        {
          "type": "SYMBOL",
          "name": "gap"
        },
        {
          "type": "SYMBOL",
          "name": "text"
        }
      ]
    },
    "instruction_block_tag": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "[!"
        },
        {
          "type": "FIELD",
          "name": "instruction",
          "content": {
            "type": "SYMBOL",
            "name": "bitmark_minus_text"
          }
        },
        {
          "type": "STRING",
          "value": "]"
        }
      ]
    },
    "hint_block_tag": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "[?"
        },
        {
          "type": "FIELD",
          "name": "hint",
          "content": {
            "type": "SYMBOL",
            "name": "bitmark_minus_text"
          }
        },
        {
          "type": "STRING",
          "value": "]"
        }
      ]
    },
    "bitmark_minus_text": {
      "type": "REPEAT1",
      "content": {
        "type": "SYMBOL",
        "name": "text"
      }
    },
    "gap": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "[_"
        },
        {
          "type": "FIELD",
          "name": "gap",
          "content": {
            "type": "SYMBOL",
            "name": "plain_text"
          }
        },
        {
          "type": "STRING",
          "value": "]"
        }
      ]
    },
    "bold": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "**"
        },
        {
          "type": "REPEAT1",
          "content": {
            "type": "SYMBOL",
            "name": "text"
          }
        },
        {
          "type": "STRING",
          "value": "**"
        }
      ]
    },
    "italic": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "__"
        },
        {
          "type": "REPEAT1",
          "content": {
            "type": "SYMBOL",
            "name": "text"
          }
        },
        {
          "type": "STRING",
          "value": "__"
        }
      ]
    },
    "formula_inline": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "=="
        },
        {
          "type": "REPEAT1",
          "content": {
            "type": "SYMBOL",
            "name": "text"
          }
        },
        {
          "type": "STRING",
          "value": "==|latex|"
        }
      ]
    },
    "superscript": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "=="
        },
        {
          "type": "REPEAT1",
          "content": {
            "type": "SYMBOL",
            "name": "text"
          }
        },
        {
          "type": "STRING",
          "value": "==|superscript|"
        }
      ]
    },
    "subscript": {
      "type": "SEQ",
      "members": [
        {
          "type": "STRING",
          "value": "=="
        },
        {
          "type": "REPEAT1",
          "content": {
            "type": "SYMBOL",
            "name": "text"
          }
        },
        {
          "type": "STRING",
          "value": "==|subscript|"
        }
      ]
    },
    "plain_text": {
      "type": "REPEAT1",
      "content": {
        "type": "SYMBOL",
        "name": "text"
      }
    },
    "text": {
      "type": "TOKEN",
      "content": {
        "type": "PREC",
        "value": -1,
        "content": {
          "type": "PATTERN",
          "value": "[^\\s*=_|\\[\\]]+"
        }
      }
    }
  },
  "extras": [
    {
      "type": "PATTERN",
      "value": "\\s"
    }
  ],
  "conflicts": [],
  "precedences": [],
  "externals": [],
  "inline": [],
  "supertypes": [],
  "reserved": {}
}